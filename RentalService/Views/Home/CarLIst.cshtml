@model IEnumerable<RentalService.Models.Vehicle>

<form id="my_form" asp-action="CarList" method="get" data-ajax="true" data-ajax-method="get" data-ajax-update="#panel" data-ajax-mode='replace' data-ajax-url="@Url.Action("GetPartial","Home")">
    <label>Vehicle type:</label>
    <input type="checkbox" name="vehicleType" value="Car" /><span>Car</span>
    <input type="checkbox" name="vehicleType" value="Moto" /><span>Moto</span>
    <br />
    <p></p>
    <label>Manufacturer:</label>
    <input type="checkbox" name="brand" value="Audi" /><span>Audi</span>
    <input type="checkbox" name="brand" value="BMW" /><span>BMW</span>
    <input class="btn btn-info float-right" type="submit" value="Search" />
</form>
@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>
}
<div class="row pr-3 pl-3" id="panel">
@foreach(var c in Model)
{
     <div class="card-body">
        <h5 class="card-title text-center">@c.Brand.Name</h5>
        <p class="card-text text-center f-sz-12 ">@c.Name</p>
        <p class="card-text rounded text-center price-for-list">@c.PricePerDay ₴</p>
    </div>    
}
</div>
