@model RentalService.ViewModels.AddVehicleClassViewModel

<h2>Adding vehicle class</h2>

<form asp-action="AddVehicleClass" asp-controller="AdminPanel" method="post" enctype="multipart/form-data">
    <div asp-validation-summary = "ModelOnly"></div>
    <div class="form-group">
        <label asp-for="ClassName" class="control-label">Class name:</label>
        <input type="text" asp-for="ClassName" class="form-control" />
        <span asp-validation-for="ClassName"></span>
    </div><br />
    <div class="form-group">Vehicle type:<br />
    @Html.DropDownListFor(model => model.VehicleTypeId, ViewBag.VehicleType as SelectList)
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Add class" />
    </div>
</form>