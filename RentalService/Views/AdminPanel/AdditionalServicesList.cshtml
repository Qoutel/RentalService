@model IEnumerable<RentalService.Models.AdditionalService>

<h2>Additional services list</h2>

<a class="btn btn-primary" asp-action="AddAdditionalService" asp-controller="AdminPanel">Add additional Service</a>
<table class="table">
<tr>
    <td><b>Service name</b></td>
    <td><b>Price</b></td>
</tr>
@foreach (var service in Model)
{
   <tr>
       <td>@service.Name</td>
       <td>@service.Price</td>
       <td><a class="btn btn-primary" asp-action="EditAdditionalService" asp-route-serviceId="@service.Id">Edit</a></td>
   </tr>
}
</table>