@model RentalService.ViewModels.EditVehicleViewModel

<h2>@Model.Name edit</h2>

<form asp-action="VehicleEdit" asp-controller="AdminPanel" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Model</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="YearOfManufactured" class="control-label">Year of manufactured</label>
        <input type="number" asp-for="YearOfManufactured" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Mileage" class="control-label">Mileage</label>
        <input type="number" asp-for="Mileage" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PricePerDay" class="control-label">Price per day</label>
        <input type="text" step="any" asp-for="PricePerDay" class="form-control" />
    </div>
    <div class="form-group">Fuel type<br />
        @Html.DropDownListFor(model => model.FuelTypeId, ViewBag.FuelTypes as SelectList)
    </div>
    <div class="form-group">Vehicle type<br />
        @Html.DropDownListFor(model => model.VehicleTypeId, ViewBag.VehicleType as SelectList)
    </div>
    <div class="form-group">
        <label asp-for="NumberOfSeats" class="control-label">Number of seats</label>
        <input type="number" asp-for="NumberOfSeats" class="form-control" />
    </div>
    <div class="form-group">
        <label>Automatic transmission</label><br />
        <input asp-for="AutomaticTransmission" />
    </div>
    <div class="form-group">Location<br />
        @Html.DropDownListFor(model => model.LocationId, ViewBag.Location as SelectList)
    </div>
    <div class="form-group">Vehicle class<br />
        @Html.DropDownListFor(model => model.VehicleClassId, ViewBag.VehicleClass as SelectList)
    </div>
    <div class="form-group">Brand<br />
        @Html.DropDownListFor(model => model.BrandId, ViewBag.VehicleBrand as SelectList)
    </div><br />
    <div class="form-group">
            <label>Add another vehicle photo</label>
            <input name="Photo" type="file" class="form-control" />
    </div><br />
    <div class="form-group">
        <input type="submit" value="Save" />
    </div>
</form>
