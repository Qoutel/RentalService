@model RentalService.ViewModels.VehicleClassListViewModel

<h2>Vehicle classification</h2>

<form id="vehicleClassFilterForm" asp-action="VehicleClassList" method="get" data-ajax="true" data-ajax-method="get" data-ajax-update="#panel" data-ajax-mode='replace' data-ajax-url="@Url.Action("PartialVehicleClassFilter","AdminPanel")">
    <label>Vehicle type:
        <select name="vehicleTypeId" asp-items="Model.VehicleTypesFilter" class="form-control"></select>
    </label>
    <label><input type="submit" value="Filter"/></label>
</form>
<br />
<a class="btn btn-primary" asp-action="AddVehicleClass" asp-controller="AdminPanel">Add class</a>
@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>
}
<div class = "list" id="panel">
<table class="table">
<tr>
    <td><b>Vehicle type</b></td>
    <td><b>Class name</b></td>
</tr>
    @foreach (var m in Model.VehicleClasses)
{
   <tr>
       <td>@foreach (var vt in Model.VehicleTypes)
           {
               if (vt.Id == m.VehicleTypeId)
               {
                   @vt.Name
               }
           }
       </td>
       <td>@m.Name</td>
   </tr>
}
</table>
</div>